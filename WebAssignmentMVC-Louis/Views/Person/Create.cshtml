@model WebAssignmentMVC.Models.Person.ViewModels.CreatePersonViewModel
@{
    ViewData["Title"] = "Persons - Add new Person";
}

<h3>Add new Person</h3>

<div class="inform">
    <form asp-action="Create" method="post">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" id="FirstName" />
        <span asp-validation-for="FirstName"></span>

        <label asp-for="LastName"></label>
        <input asp-for="LastName" id="LastName" />
        <span asp-validation-for="LastName"></span>

        <label asp-for="Phone"></label>
        <input asp-for="Phone" type="tel" />
        <span asp-validation-for="Phone"></span>

        <label asp-for="Countries"></label>
        <select asp-for="Countries" id="CountryID">

        @foreach (Country country in Model.Countries)
        {
            <option value="@country.Id">@country.Cname</option>
        }
        </select>

        <button type="submit" class="button">Create Person</button>
    </form>
</div>
<div class="col-2 " id="PersonList">
</div>
