@model List<Person>
@{
    ViewData["Title"] = "Persons - Search for Information";
}

<h3>Search for Person Information</h3>

<form asp-action="FindPerson" method="post">
    <label>Enter ID</label>
    <input name="Id" type="number" id="inputId" min="0"/>

    <button onclick="findThroughId('@Url.Action("FindPerson", "Person")', 'inputId')" class="button">Search</button>
</form>
<hr />
<div>
        <partial name="_PersonDetailView" model="Model" />
</div>


