@model List<Person>

@if (Model.Count>0)
            {
<table class="contact" width="500px">
    <tr>
        <th>ID Number:</th>
        <td>@Model[0].Id</td>
    </tr>
    <tr>
        <th>First Name:</th>
        <td>@Model[0].FirstName</td>
    </tr>
    <tr>
        <th>Last Name:</th>
        <td>@Model[0].LastName</td>
    </tr>
    <tr>
        <th>Telephone:</th>
        <td>@Model[0].Phone</td>
    </tr>
    <tr>
        <th>Actions</th>
        <td>
            <a class="btn btn-info" asp-action="Delete" asp-controller="Person" asp-route-id="@Model[0].Id">Delete</a>

        </td>
    </tr>
</table>
}
else
            {

<p>------</p>
            }

