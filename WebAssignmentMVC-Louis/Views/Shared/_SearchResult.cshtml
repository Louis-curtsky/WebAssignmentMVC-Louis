@model List<Person>

<table class="contact">
    <tr>
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Telephone</th>
        <th>Country</th>
        <th>City</th>
        <th>Actions</th>
        <th>Language</th>
    </tr>
    <tbody>
        @if (Model != null)
        {
            @foreach (Person person in Model)
            {
                <tr>
                    <td>@person.Id</td>
                    <td>@person.FirstName</td>
                    <td>@person.LastName</td>
                    <td>@person.Phone</td>
                    <td>@ViewBag.Country</td>
                    <td>@ViewBag.City</td>
                    <td>
                        @foreach (PersonLanguage item in ViewBag.Language)
                        {
                            @item.LanguageId
                        }
                    </td>
                    <td>
                        <a class="btn btn-info" asp-action="Delete" asp-controller="Person" asp-route-id="@person.Id">Delete</a>
                        <button onclick="findThroughId('@Url.Action("Edit", "Person", new { id = person.Id })')">Edit</button>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
                <td>-</td>
            </tr>
        }
    </tbody>
 </table>
