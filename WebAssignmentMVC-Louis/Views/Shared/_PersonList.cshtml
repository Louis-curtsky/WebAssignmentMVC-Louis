@model Person

    <table class="contact">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Telephone</th>
            <th>Country</th>
            <th>City</th>
            <th>Actions</th>
            <th>Language</th>
        </tr>
        <tbody>
    <tr>
        <td>@Model.Id</td>
        <td>@Model.FirstName</td>
        <td>@Model.LastName</td>
        <td>@Model.Phone</td>
        <td>@ViewBag.Country</td>
        <td>@ViewBag.City</td>
        <td>
            @foreach (PersonLanguage item in ViewBag.Language)
            {
                @item.LanguageId
            }
        </td>
        <td>
            <a class="btn btn-info" asp-action="Delete" asp-controller="Person" asp-route-id="@Model.Id">Delete</a>
            <button onclick="findThroughId('@Url.Action("Edit", "Person", new { id = Model.Id})')">Edit</button>
        </td>
     </tr>
     </tbody>
</table>
