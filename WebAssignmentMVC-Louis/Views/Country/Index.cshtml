@model List<Country>
@{
    ViewData["Title"] = "Index Countries";
}


<h1>Country List</h1>
<a asp-action="Create" class="btn-secondary mt-4 mb-4">Add new Country</a>
<table class="contact">
    <tr>
     <th>ID</th>
     <th>Country</th>
     <th>Actions</th>
    </tr>
<tbody>
    @foreach (Country country in Model)
    {
        <tr>
            <td>@country.Id</td>
            <td>@country.Cname</td>
            <td>
                <a asp-action="Edit" asp-controller="Country" asp-route-id="@country.Id" class="mr-4 text-warning">Edit</a>
                <a asp-action="Delete" asp-controller="Country" asp-route-id="@country.Id" class="mr-4 text-danger">Delete</a>
            </td>
        </tr>
    }
</tbody>
</table>
@if (ViewBag.msg != null)
{
    <h3>@ViewBag.msg</h3>
}
